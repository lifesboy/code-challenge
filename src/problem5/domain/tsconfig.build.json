{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "paths": {
      "@problem5/models": ["../models"],
      "@problem5/models/*": ["../models/*"],
      "@problem5/repositories": ["../repositories"],
      "@problem5/repositories/*": ["../repositories/*"],
      "@problem5/lib": ["../lib"],
      "@problem5/lib/*": ["../lib/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test/**/*", "*.spec.ts"],
  "references": [
    {
      "path": "../models/tsconfig.build.json"
    },
    {
      "path": "../repositories/tsconfig.build.json"
    },
    {
      "path": "../lib/tsconfig.build.json"
    }
  ]
}